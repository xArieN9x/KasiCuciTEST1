<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public IP: ..."
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewDNS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNS: ..."
        android:textSize="18sp"
        android:layout_below="@id/textViewIP"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/networkIndicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/textViewDNS"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/red_circle"/>

    <Button
        android:id="@+id/btnDoAllJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do All Job"
        android:layout_below="@id/networkIndicator"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btnStartVpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start VPN (Grant perm)"
        android:layout_below="@id/btnDoAllJob"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:padding="8dp"/>
</RelativeLayout>
